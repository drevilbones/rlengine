#include <stdio.h>
#include <Game.h>
#include <Renderer.h>
#include <InputHandler.h>

int main(int argc, char* argv[]) {

    Renderer* theRenderer = new Renderer;
    InputHandler* theHandler = new InputHandler;
    Game* theGame = new Game(theRenderer, theHandler);

    while (theGame->stillRunning()) {
        thehandle();
        theGame->update();
        theRenderer.render();
    }

    return 0;
}
